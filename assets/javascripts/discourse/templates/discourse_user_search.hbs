<h1>
  ユーザ検索
</h1>
<div style="padding-bottom: 300px">
  {{d-button label="search_user.toggle_filter" action="toggle_filter"}}
  {{#if showFilter}}
    <form id="search-form" class="form-vertical">
    <div class="control-group">
            <label class="control-label">アカウント名</label>
            <input type="text" name="name" onchange={{action "filter"}}/>
          </div>
      <div class="control-group">
        <label class="control-label">
          学生/社会人
        </label>
        <select name="state" class="search-select" onchange={{action "filter"}}>
          <option value="">指定なし</option>
          <option value="学士">学士</option>
          <option value="修士">修士</option>
          <option value="博士">博士</option>
          <option value="社会人">社会人</option>
        </select>
      </div>
      <div class="control-group">
        <label class="control-label">学年・社会人経験年数</label>
        <input type="number" name="grade_year" min="-1" onchange={{action "filter"}}/>
        <div class="instructions">未入力または-1で指定なし</div>
      </div>
      <div class="control-group">
        <label class="control-label">文・理・文理</label>
        <select name="undergraduate" class="search-select" onchange={{action "filter"}} >
          <option value="">指定なし</option>
          <option value="文系">文系</option>
          <option value="理系">理系</option>
          <option value="文理系">文理系</option>
        </select>
      </div>
      <div class="control-group">
        <label class="control-label">学校名・卒業学校名</label>
        <input type="text" name="university" onchange={{action "filter"}}/>

      </div>
      <div class="control-group">
        <label class="control-label">留浪人合計年数</label>
        <select name="repeat_year" class="search-select" onchange={{action "filter"}} >
          <option value="">指定なし</option>
          <option value="現役">現役</option>
          <option value="現役+1年">現役+1年</option>
          <option value="現役+2年">現役+2年</option>
          <option value="現役+3年以上">現役+3年以上</option>
          <option value="非公開">非公開</option>
        </select>
        <div class="instructions">未入力または-1で指定なし</div>
      </div>
      <div class="control-group">
        <label class="control-label">業界</label>
        <input type="text" name="industry" onchange={{action "filter"}}/>
      </div>
      <div class="control-group">
        <label class="control-label">職種</label>
        <input type="text" name="occupation" onchange={{action "filter"}}/>
      </div>
      <div class="control-group">
        <label class="control-label">性別</label>
        <select name="gender" class="search-select" onchange={{action "filter"}}>
          <option value="">指定なし</option>
          <option value="男性">男性</option>
          <option value="女性">女性</option>
          <option value="非公開">非公開</option>
        </select>

      </div>

    </form>
    <div class='buttons'>
      {{d-button label="search_user.button" action="filter"}}
    </div>
  {{/if}}
  <h2 style="margin-top: 30px">表示設定</h2>
  <div id="display-setting-wrapper">
    <label>学生/社会人<input type="checkbox" name="state" checked onchange={{action "toggle_display"}}></label>
    <label>学年/社会人年数<input type="checkbox" name="grade_year" checked onchange={{action "toggle_display"}}></label>
    <label>文/理/文理<input type="checkbox" name="undergraduate" checked onchange={{action "toggle_display"}}></label>
    <label>在・卒業学校名<input type="checkbox" name="university" checked onchange={{action "toggle_display"}}></label>
    <label>留浪合計回数<input type="checkbox" name="repeat_year" checked onchange={{action "toggle_display"}}></label>
    <label>内定/就業業界<input type="checkbox" name="industry" checked onchange={{action "toggle_display"}}></label>
    <label>内定/就業職種<input type="checkbox" name="occupation" checked onchange={{action "toggle_display"}}></label>
    <label>性別<input type="checkbox" name="gender" checked onchange={{action "toggle_display"}}></label>
  </div>
  <h1 style="margin-top:30px">検索結果</h1>
  <div id="search-result" class="search-result">
    {{#each filtered_users as |user|}}
      {{searched-user-info display_flag=display_flag user=user}}
    {{/each}}
  </div>
</div>
